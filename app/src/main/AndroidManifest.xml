<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rathanak.khmerroman">

    <application
        android:allowBackup="true"
        android:icon="@drawable/roman_khmer_logo"
        android:label="@string/app_name"
        android:roundIcon="@drawable/roman_khmer_logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ProfileSettingsActivity"
            android:label="@string/title_activity_profile_settings"></activity>
        <activity android:name=".CustomMapping"
            android:label="@string/title_activity_custom_mapping"/>
        <activity android:name=".RomanMapping"
            android:label="@string/title_activity_roman_mapping"/>
        <activity
            android:name=".About"
            android:theme="@style/Theme.AppCompat.NoActionBar" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <service
            android:name=".keyboard.RomanKeyboardLayout"
            android:permission="android.permission.BIND_INPUT_METHOD">
            <intent-filter>
                <action android:name="android.view.InputMethod" />
            </intent-filter>

            <meta-data
                android:name="android.view.im"
                android:resource="@xml/method" />
        </service>
    </application>

</manifest>