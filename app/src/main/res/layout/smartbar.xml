<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/smartbar"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:maxHeight="50dp"
    android:background="@color/grey_light"
    tools:ignore="NestedWeights"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="5dp">
    <ToggleButton
        android:id="@+id/toggleOption"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:background="@drawable/ic_mini_logo"
        android:checked="true"
        android:textOff=""
        android:textOn="" />

    <!--  Setting options here  -->
    <LinearLayout
        android:animateLayoutChanges="true"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/settingsList"
        android:gravity="right"
        android:paddingLeft="5dp"
        android:visibility="gone">
        <ImageButton
            android:id="@+id/btnOpenApp"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/ic_settings"/>
    </LinearLayout>

    <!--  Roman number keys here  -->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/numbersList"
        android:gravity="right"
        android:paddingLeft="5dp"
        android:visibility="gone">
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginRight="2dp"
            android:id="@+id/btnNum1"
            android:text="1"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginRight="2dp"
            android:id="@+id/btnNum2"
            android:text="2"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginRight="2dp"
            android:id="@+id/btnNum3"
            android:text="3"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginRight="2dp"
            android:id="@+id/btnNum4"
            android:text="4"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginRight="2dp"
            android:id="@+id/btnNum5"
            android:text="5"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginRight="2dp"
            android:id="@+id/btnNum6"
            android:text="6"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginRight="2dp"
            android:id="@+id/btnNum7"
            android:text="7"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginRight="2dp"
            android:id="@+id/btnNum8"
            android:text="8"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginRight="2dp"
            android:id="@+id/btnNum9"
            android:text="9"/>
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:padding="0dp"
            android:layout_marginRight="2dp"
            android:id="@+id/btnNum0"
            android:text="0"/>
    </LinearLayout>

    <!--  Roman suggestion here  -->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/candidatesContainer"
        android:visibility="gone">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:id="@+id/candidates_list">
                <Button
                    android:layout_height="40dp"
                    android:layout_width="wrap_content"
                    android:text="Rathanak"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/candidate0" />
                <Button
                    android:layout_height="40dp"
                    android:layout_width="wrap_content"
                    android:text="Rathanak 1"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/candidate2" />
                <Button
                    android:layout_height="40dp"
                    android:layout_width="wrap_content"
                    android:text="Rathanak 2"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/candidate3" />
                <Button
                    android:layout_height="40dp"
                    android:layout_width="wrap_content"
                    android:text="Rathanak 4"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/candidate4" />
                <Button
                    android:layout_height="40dp"
                    android:layout_width="wrap_content"
                    android:text="Rathanak 5"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/candidate5" />
                <Button
                    android:layout_height="40dp"
                    android:layout_width="wrap_content"
                    android:text="Rathanak 6"
                    android:layout_marginLeft="5dp"
                    android:id="@+id/candidate6" />
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>

    <!--  Setting ad here  -->
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/bannerContainer"
        android:gravity="center"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:visibility="gone">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/app_banner"/>
    </LinearLayout>
</LinearLayout>